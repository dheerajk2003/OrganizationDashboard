@model mvc4.ViewModels.IdListModel

@{
<div class="">
    <div class="row">
        <div class="col-sm-12">
            <form class="md-float-material form-material" enctype="multipart/form-data" method="post" action="/Home/AddInvestor">

                <div class="auth-box card">
                    <div class="card-block">
                        <div class="row m-b-20">
                            <div class="col-md-12">
                                <h3 class="text-center txt-primary">Add New Investor</h3>
                            </div>
                        </div>
                        <div class="form-group form-primary">
                            <input type="text" name="InvestorName" class="form-control" required="" id="InvestorName" value="">
                            <span class="form-bar"></span>
                            <label class="float-label">Name</label>
                        </div>
                        <div class="form-group form-primary">
                            <input type="text" name="InvestorEmail" class="form-control" required="" id="InvestorEmail" value="">
                            <span class="form-bar"></span>
                            <label class="float-label">Your Email Address</label>
                        </div>

                        <div class="form-group primary">
                            <textarea name="InvestorAddress" class="form-control" required="" rows="5" cols="5" id="InvestorAddress">
    </textarea>
                            <span class="form-bar"></span>
                            <label class="float-label">Address</label>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group form-primary">
                                    <input type="text" name="InvestorContact" class="form-control" required="" id="InvestorContact" value="">
                                    <span class="form-bar"></span>
                                    <label class="float-label">Contact</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group form-primary">
                                    <input type="text" name="InvestorContactA" class="form-control" required="" id="InvestorContactA" value="">
                                    <span class="form-bar"></span>
                                    <label class="float-label">Alternate</label>
                                </div>
                            </div>
                        </div>

                        <div class="row" >
                            <div class="col-sm-6">
                                <div class="form-group form-primary">
                                    <select name="ClientId">
                                        @foreach (ClientModel item in Model.Cm)
                                        {
                                            <option value="@(item.ClientId)">@(item.ClientName)</option>
                                        }
                                    </select>
                                    <span class="form-bar"></span>
                                    <label class="float-label">Client</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                    <div class="form-group form-primary">
                                        <select name="FundId">
                                            @foreach (FundModel item in Model.Fm)
                                            {
                                                <option value="@(item.FundId)">@(item.FundName)</option>
                                            }
                                        </select>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Fund</label>
                                    </div>
                            </div>
                        </div>

                        <div class="form-group primary">
                            <input type="file"  class="form-control" required id="InvestorLogo" name="file" />
                            <span class="form-bar"></span>
                        </div>
                        <div class="row m-t-30">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">ADD Investor</button>
                            </div>
                        </div>
                        <hr />
                    </div>
                </div>
               
            </form>
        </div>
    </div>
</div>

}


